<% layout('/layouts/boilerplate.ejs') %>
<div class="row">
    <div class="col-8 offset-2">
        <br>
        <h1>Create New Listing</h1>
    <form action="/listings" method="post" class="mb-3 needs-validation " enctype="multipart/form-data" novalidate>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" placeholder="Title" name="listing[title]" class="form-control" required>
            <div class="valid-feedback">Title Look Good</div>
            <div class="invalid-feedback">Title is required</div>
        </div>
       <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]"  class="form-control" required></textarea>
            <div class="invalid-feedback">must write description</div>
       </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" name="listing[image]" placeholder="patse image url" class="form-control" >
            required
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="Price" class="form-control" required>
                <div class="invalid-feedback">must enter price</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" placeholder="Country" class="form-control" required>
                <div class="invalid-feedback">must enter country</div>
           </div>
        </div>
       <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" placeholder="Location" class="form-control" required>
            <div class="invalid-feedback">must enter location</div>
       </div>

        <button class="btn btn-dark">Add</button>
    </form>
    <br>
</div>
</div>
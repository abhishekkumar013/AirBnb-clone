<% layout('/layouts/boilerplate.ejs') %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">SingUp on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form method="post" action="/singup" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" required placeholder="username" id="username" name="username"  class="form-control">
                <div class="invalid-feedback">username is required</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" required placeholder="email" id="email" name="email"  class="form-control">
                <div class="invalid-feedback">email is required</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" required placeholder="password" id="password" name="password"  class="form-control">
                <div class="invalid-feedback">password is required</div>
            </div>
            <button class="btn btn-success">SingUp</button>
        </form>
    </div>
</div>